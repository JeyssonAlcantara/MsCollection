        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .privacy-header {
        text-align: center;
        margin-bottom: 2rem;
    }

        .privacy-header h1 {
            font-size: 2.5rem;
            color: #3a2e2c;
            margin-bottom: 0.5rem;
        }

        .privacy-header h3 {
            font-size: 1.2rem;
            color: #c19d87;
            margin-bottom: 0.25rem;
        }

        .privacy-header p {
            font-size: 0.9rem;
            color: #6c5a53;
        }

    .privacy-content p {
        text-align: justify;
