@inherits LayoutComponentBase

<PageTitle>Home</PageTitle>

<!-- Estilos personalizados -->
<style>
    /* Fondo del body */
    body {
        background-color: #f8f6f5;
    }

    .navbar-custom {
        background-color: #f8f6f5;
        border-bottom: 5px solid #e9cfc5;
        width: 80%;
        margin: 1.5rem auto 0 auto;
    }

    @@media (max-width: 800px) {
        .navbar-custom {
            width: 100%;
            margin-top: 0.5rem;
        }
    }

    .nav-link {
        color: black;
        transition: color 0.3s ease-in-out;
    }

        .nav-link:hover {
            color: #c19d87;
            font-weight: bold;
        }

    /* Limita el ancho máximo al 80% y centra */
    .layout-container {
        width: 100%;
        max-width: 80%;
        margin: 2rem auto 0 auto;
    }

    
</style>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-custom px-4">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/Perfil">
            <i class="bi bi-person-circle"></i>
            <span>Cuenta</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav gap-4">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">INICIO</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/catalogo">CATÁLOGO</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/AcercaDe">ACERCA DE</NavLink>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-uppercase" href="/Carrito">
                        SHOP
                        <i class="bi bi-cart3"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Contenido de la página -->
<div class="layout-container mt-4">
    @Body
</div>

<!-- Footer -->
<footer class="layout-container mt-5 py-4 px-3" style="background-color: #d6c9c0;">
    <div class="row">
        <!-- Columna de contacto -->
        <div class="col-md-6 mb-3">
            <h5 class="fw-bold">Contacto</h5>
            <p>
                <i class="bi bi-geo-alt-fill"></i>
                <span class="fw-bold">Dirección:</span> Dentro de las instalaciones de Walmart Heredia, Escazú y San Sebastián
            </p>
            <p>
                <i class="bi bi-envelope-fill"></i>
                <span class="fw-bold">Correo:</span> joyeriaherediams@gmail.com
            </p>
            <p>
                <i class="bi bi-telephone-fill"></i>
                <span class="fw-bold">Teléfono:</span> +506 7244921
            </p>
        </div>

        <!-- Columna de logo y enlaces -->
        <div class="col-md-6 d-flex flex-column align-items-md-end align-items-start">
            <div class="d-flex align-items-center gap-3 mb-3">
                <img src="logo.png" alt="Logo" style="width: 80px; height: 80px; object-fit: contain;" />
                <div class="d-flex flex-column">
                    <a href="/catalogo" class="text-dark text-decoration-none fw-bold">Productos</a>
                    <a href="/AcercaDe" class="text-dark text-decoration-none fw-bold">Sobre Nosotros</a>
                    <a href="/Politicas" class="text-dark text-decoration-none fw-bold">Política de privacidad</a>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="text-center mt-3 fw-bold">
        Copyright © 2025
        <span class="fw-bold">MS <span style="text-decoration: underline;">Joyería y Relojería</span></span>.
        All rights reserved.
    </div>
</footer>
